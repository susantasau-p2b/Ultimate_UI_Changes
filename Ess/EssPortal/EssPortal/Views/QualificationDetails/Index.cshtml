                </div>*@


            <div class="row3 content_margine">
                <div id="Qualificationlist_old"></div>
                @Html.LabelFor(m => m.Qualification, "Qualification :", new { @class = "popup-content-label" })
                <div class="popup-content-table">
                    <table class="lookuptableselected" id="Qualificationlist">
                        <tr><th>Id</th><th>LookUp Selected Description</th></tr>
                    </table>
                </div>
                <div class="icon-row">
                    <button data-p2btooltip="Select Qualification" class="popup-content-icon-lookup" id="Lookup-Qualification-QualDetails"><span class="ui-icon ui-icon-folder-open popup-content-iconmark"></span></button>
                    <button data-p2btooltip="Create Qualification" class="popup-content-icon-create" id="Create-Qualification-QualDetails"><span class="ui-icon ui-icon-newwin popup-content-iconmark"></span></button>
                    <button data-p2btooltip="Edit Qualification" class="popup-content-icon-edit" id="Edit-Qualification-QualDetails"><span class="ui-icon ui-icon-pencil popup-content-iconmark"></span></button>
                    <button data-p2btooltip="Remove Qualification" class="popup-content-icon-remove" id="Remove-Qualification-QualDetails"><span class="ui-icon ui-icon-trash popup-content-iconmark"></span></button>
                </div>
            </div>

            <div class="row3 content_margine">
                @Html.LabelFor(m => m.SpecilisedBranch, "Branch :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.SpecilisedBranch, new { @class = "popup-content-textbox must" })
            </div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.Institute, "School/Instituate/College :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.Institute, new { @class = "popup-content-textbox must" })
            </div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.University, "University :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.University, new { @class = "popup-content-textbox must" })
            </div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.ResultPercentage, "ResultPercentage :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.ResultPercentage, new { @class = "popup-content-textbox must" ,@id="ResultPercentage" })
            </div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.ResultGradation, "ResultGradation :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.ResultGradation, new { @class = "popup-content-textbox must" })
            </div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.PasingYear, "PasingYear :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.PasingYear, new { @class = "popup-content-textbox must", @id = "PasingYear" })
            </div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.ResultSubmissionDate, "Submission Date :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.ResultSubmissionDate, new { @class = "popup-content-textbox must",@id="ResultSubmissionDate" })
            </div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.SpecialFeature, "Naration :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.SpecialFeature, new { @class = "popup-content-textbox must" })
            </div>

        }
