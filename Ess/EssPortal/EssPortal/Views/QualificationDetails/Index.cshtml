<script>
    $(function (e) {
        $('button').button();
        var dt;
        var ColNames = [];
        var ColModel = [];
        var SortName, Caption, url, width, height;
        ColModel = ['Id', 'Institute', 'University'];
        ColNames = ['Id', 'Institute', 'University'];
        SortName = 'Id';
        Caption = 'Qualification Details';
        url = '@Url.Action("P2BGrid")';
        width = 1000;
        height = 150;
        $('#jqgrid').P2BGrid(ColNames, ColModel, SortName, Caption, url, width, height);

        function AssignData() {
            dt = $('#jqgrid').P2BGrid.P2BEdDelV('#jqgrid', 'Id');
        }

        var btndisablenames = "Edit-Qualification-QualDetails,#Remove-Qualification-QualDetails";

        function DateConvert(JsonDate) {
            var date = new Date(parseInt(JsonDate.substr(6)));
            var displayDate = $.datepicker.formatDate("dd/mm/yy", date);
            return displayDate;
        };



        $('#create_dialog').P2BCreateDialog();
        $('#create').on("click", function (event) {
            $('#frmQualificationDetails').trigger("reset");
            $('#create_dialog').P2BCreateDialog('', '', '', '', 'Create frmQualificationDetails', 'open', '@Url.Action("Create")', '#frmQualificationDetails', 'Message :', 'Request Falied :', '#jqgrid', 500, 620, '#Qualificationlist', btndisablenames, function (data) { });
         
            event.preventDefault();
        });


        $('#ResultPercentage').ForceOnlyNumeric();
        $('#ResultSubmissionDate').P2BDatePicker();
        $('#PasingYear').P2BDatePicker();
        

        $('<div></div>').P2BPartialCreateModalDialog();
        $('#Create-Qualification-QualDetails').on("click", function (event) {
          
            $('<div></div>').P2BPartialCreateModalDialog('@Url.Action("partial", "Qualification")', 'Create Qualification', 'open', '@Url.Action("Create", "Qualification")', '#frmQualification', 'Message :', 'Request Falied :', '#jqgrid', 400, 500, '', '', '', '#frmQualificationDetails', '', function (data) {
                //console.log(qualificn.Id);
             
                $('#Qualificationlist').P2BLookUpEncapsulate('#Qualificationlist', 'Qualificationlist', data[0], data[1], 'Qualificationlist', '#Edit-Qualification-QualDetails,#Remove-Qualification-QualDetails', 'N');
            });
            event.preventDefault();
        });



        //To get data in Lookup
        $('#Lookup-Qualification-QualDetails').on('click', function (event) {
           // alert('Show Qualifications')
            $('.dialog').P2BLookUpModal('@Url.Action("GetQualificationLKDetails", "QualificationDetails")', '', 'lookupdiv', 'Look Up Data', '#Qualificationlist', 'Qualificationlist', 5, 'Qualificationlist', '#frmQualificationDetails', 'N', '#Edit_QualDetails_empAcademicDtl,#Remove_QualDetails_empAcademicDtl', 'lookup_table', 'pageNavPosition');
            event.preventDefault();
        });


      

        $('#Edit-Qualification-QualDetails').button().on("click", function (event) {
            var a = [], b;
            a = $('#Qualificationlist').P2BGetTableDataonSelectedRow('#Qualificationlist', 0);
            b = a[0];
            $('<div></div>').P2BPatialEditModalDialog('@Url.Action("partial", "Qualification")', '@Url.Action("edit", "Qualification")', b, '@Url.Action("Editsave", "Qualification")', 'Edit Qualification', '#frmQualification', b, 'Message :', 'Request Falied :', '#jqgrid', 400, 500, '#frmQualificationDetails', '#Qualificationlist', 'Qualificationlist', 'Qualificationlist', 'N', '#Edit-Qualification-QualDetails,#Remove-Qualification-QualDetails', function (data) {

                $.each(data, function (i, k) {
                   
                        $('#frmQualification').trigger("reset");
                        $('#QualificationShortName').val(k.QualificationShortName);
                        $('#QualificationDesc').val(k.QualificationDesc);
                       // $('#QualificationType_Id').val(k.QualificationType_Id)
                       $('#Qualificationlist1').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 314, k.BusinessType_Id);
                });
            });
            event.preventDefault();
        });


        $('#Remove-Qualification-QualDetails').button().on('click', function (event) {
           // dt = $('#jqgrid').P2BGrid.P2BEdDelV('#jqgrid', 'ID');
            var a = [], b;
            a = $('#Qualificationlist').P2BGetTableDataonSelectedRow('#Qualificationlist', 0);
            b = a[0];
            $('<div></div>').P2BPartialDeleteModalDialog('', b, 0, 'Are you sure want to delete record???', 'Message : ', 'Request failed', '#Qualificationlist', $('#Qualificationlist').val(), 200, 200, '#frmQualificationDetails', '#Qualificationlist', '#Remove-Qualification-QualDetails,#Edit-Qualification-QualDetails');
            event.preventDefault();
        });



     

        $('#delete').button().click(function (event) {
            dt = $('#jqgrid').P2BGrid.P2BEdDelV('#jqgrid', 'Id');
            $('#create_dialog').P2BDeleteModalDialog('@Url.Action("Delete")', dt.Id, 'Are you sure want to remove record???', 'Message : ', 'Request failed', '#jqgrid', 200, 200);
            event.preventDefault();
        });


 // Main page edit
        $('#edit').on('click', function () {
            AssignData();
            $('#create_dialog').P2BEditModalDialog('@Url.Action("Edit")', dt.Id, '@Url.Action("EditSave")', "Edit Data", '#frmQualificationDetails', dt.Id, 'Message : ', 'Request Falied :', '#jqgrid', 500, 620, 'Qualificationlist', btndisablenames, function (data) {
                // setTimeout(function () {
                $.each(data[0], function (i, k) {
              
                    $('#frmQualificationDetails').trigger("reset");
                   // alert(k.Institute);
                    $('#Institute').val(k.Institute);
                    $('#SpecilisedBranch').val(k.SpecilisedBranch);
                    $('#University').val(k.University);
                   
                    $('#ResultPercentage').val(k.ResultPercentage);
                    $('#SpecilisedBranch').val(k.SpecilisedBranch);
                    $('#ResultGradation').val(k.ResultGradation);
                   
                    $('#SpecialFeature').val(k.SpecialFeature);
                    if (k.PasingYear != null) {
                        $('#PasingYear').val(DateConvert(k.PasingYear));
                    }
                    if (k.ResultSubmissionDate != null) {
                        $('#ResultSubmissionDate').val(DateConvert(k.ResultSubmissionDate));
                    }

                });

                //partial page bind
                $.each(data[1], function (i, k) {
                    $('#Qualificationlist').P2BLookUpEncapsulate('#Qualificationlist', 'Qualificationlist', k.Qual_Id, k.Qual_FullDetails, 'Qualificationlist', '#Edit-Qualification-QualDetails,#Remove-Qualification-QualDetails', 'A');
                });
                //alert(data[3]);
                $('#autho_allow').val(data[3]); //Compulsory for authorisation
                // }, 2000);
            });
        });



      


        //View main page
        $('#view').button().click(function (event) {
            AssignData();

            $('#create_dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.Id, 'View', '#Qualificationlist', btndisablenames, 500, 620, '#autho', '@Url.Action("AuthSave")', dt.Id, '', '', '', '', '#jqgrid', function (data) {
                $.each(data[0], function (i, k) {
                    $('#autho_action').val(k.Action);
                    $('#frmQualificationDetails').trigger("reset");
                    $('#Institute').val(k.Institute);
                    $('#SpecilisedBranch').val(k.SpecilisedBranch);
                    $('#University').val(k.University);
                    $('#PasingYear').val(k.PasingYear);
                    $('#ResultPercentage').val(k.ResultPercentage);
                    $('#SpecilisedBranch').val(k.SpecilisedBranch);
                    $('#ResultGradation').val(k.ResultGradation);
                    $('#ResultSubmissionDate').val(k.ResultSubmissionDate);
                    $('#SpecialFeature').val(k.SpecialFeature);
                    if (k.PasingYear != null) {
                        $('#PasingYear').val(DateConvert(k.PasingYear));
                    }
                    if (k.ResultSubmissionDate != null) {
                        $('#ResultSubmissionDate').val(DateConvert(k.ResultSubmissionDate));
                    }


                });
                $.each(data[1], function (i, k) {
                    //alert('1');
                    $('#Qualificationlist').P2BLookUpEncapsulate('#Qualificationlist', 'Qualificationlist', k.Qual_Id, k.Qual_FullDetails, 'Qualificationlist', '', 'A');

                });

                //To bind old data if authorisation is true
                if ($("#autho").hasClass('auto_active')) {
                    //alert('2');
                    // alert(data[2].Name, data[2].IncrList_val)
                    $('#SpecilisedBranch').oldVal(data[2].SpecilisedBranch);
                    $('#Institute').oldVal(data[2].Institute);
                    $('#University').oldVal(data[2].University);
                    $('#PasingYear').oldVal(data[2].PasingYear);
                    $('#ResultPercentage').oldVal(data[2].ResultPercentage);
                    $('#PasingYear').oldVal(data[2].PasingYear);
                    $('#ResultGradation').oldVal(data[2].ResultGradation);
                    $('#ResultSubmissionDate').oldVal(data[2].ResultSubmissionDate);
                    $('#SpecialFeature').oldVal(data[2].SpecialFeature);
                    $('#Qualificationlist_old').oldLookupVal(data[2].Qualification_val);
                }
            });

        });

       // $('.popup_radio_button').buttonset();
        $('#autho').makeDisable('#create,#edit,#delete');
        //$('#Categorylist').selectmenu().selectmenu("menuWidget");
        $('#autho').onClickGrid('#jqgrid', '@Url.Action("P2BGrid")', '@Url.Action("P2BGrid")');

       // $('.drop').selectmenu().selectmenu('menuWidget');
        $('.date').P2BDatePicker();
    });
</script>