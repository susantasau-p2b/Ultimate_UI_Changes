            if ($.LocalStorageHelper.Get("Whois").toUpperCase() == "Sanction".toUpperCase()) {
                $('#authority').val($.LocalStorageHelper.Get("Whois"));
                $('#MySelf-div').hide();
                $('#Approval-div').hide();
                $('#Sanction-div').show();
