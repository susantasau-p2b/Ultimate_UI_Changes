@{
    Layout = null;
}
@model Attendance.FutureOD
<style>
    .qual_popup-content-textbox {
        min-width: 200px;
        margin: 0px 0px 1px 3px;
    }

    .qual_popup-content-label {
        display: block;
        float: left;
        width: 165px;
    }

    .content_margine_quali {
        margin: 2.5px;
        padding: 0.5px;
    }

    .qual_row3 {
        width: 473px;
    }

    .qual_icon_row3 {
        left: 118px;
        top: -150px;
        position: relative;
    }

    .popup-content-label {
        width: 172px;
        display: block;
        float: left;
    }

    .row1 {
        width: 635px;
        display: inline-block;
    }

    .content_margine_quali {
        margin: 2.5px;
        padding: 0.5px;
    }

    .hide_textbox {
        display: none;
    }

    .container_div {
        border: 1px solid rgba(207, 207, 207, 0.91);
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .section1_Leave {
        display: block;
        border: 1.5px solid rgba(207, 207, 207, 0.91);
        height: 554px;
        width: 534px;
        margin: 4px auto;
        position: absolute;
    }

    .section2_Leave {
        display: block;
        border: 1px solid #ddd;
        height: 554px;
        width: 610px;
        margin: 5px 4px;
        position: absolute;
        left: 546px;
    }

    .heading {
        background: rgba(207, 207, 207, 0.91) none repeat scroll 0 0;
        color: #424242;
        display: block;
        font-size: 1em;
        font-weight: bold;
        height: 15px;
        margin: 3px auto;
        padding: 2px 0 1px 2px;
        width: 99%;
    }

    .Sanction-div {
        display: none;
    }

    .lv-label {
        width: 140px;
        font-size: 11px;
        padding: 1px;
        position: relative;
        float: left;
        font-weight: bold;
    }

    .lb-data {
        font-weight: bold;
        font-size: 11px;
        float: left;
    }
</style>
<html>

<body>
    <div class="lookup_Increment">
        <div title="LookUp Data">
            <div class="lookupdiv"></div>
        </div>
        <div id="pageNavPosition">

        </div>
    </div>
    <div title="Create Hobby Detail">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmFutureOdDetails1", name = "frmFutureOdDetails1" }))
        {
            <input id="id" type="hidden" name="auth_id" />
            <input type="hidden" name="procsname" id="pid" />
            <input type="hidden" name="authority" id="authority" />

            <div id="create_dialog" title="Create Future OD Details">

                <div class="row1 content_margine">
                    <label class="lv-label">Req Date :</label>
                    <div id="ReqDate" class="lb-data"></div>
                </div>
                <div class="row1 content_margine">
                    <label class="lv-label">From Date :</label>
                    <div><input type="text" name="MyInTime" id="MyInTime" value="" /></div>
                    <div id="FromDate" class="lb-data"></div>
                </div>
                <div class="row1 content_margine">
                    <label class="lv-label">To Date :</label>
                    <div id="ToDate" class="lb-data"></div>
                </div> 
                <div class="row1 content_margine">
                    <label class="lv-label">Reason :</label>
                    <textarea name="Reason" id="Reason"></textarea>
                </div>
            </div>
            <div class="section_Method" id="MySelfCancel-div">

                @*<div class="heading">Approval Authority Views</div>*@
                <div id="yes_no_div" class="row1 content_margine">
                    <label class="popup-content-label">
                        <b>You want to Cancel this req?:</b>
                    </label>
                    <div class="popup_radio_button">
                        <input type="radio" name="CancelReq" value="true" id="rdo1" /><label for="rdo1">Yes</label>
                        <input type="radio" name="CancelReq" id="rdo2" value="false" /><label for="rdo2">No</label>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
<script>
    $(document).ready(function () {

        $('#ReqDate').attr('readonly', 'readonly');
        $('#ReqDate').P2BDatePicker();
        $('#FromDate').P2BDatePicker();
        $('#ToDate').P2BDatePicker();
        $('.popup_radio_button').buttonset();

        if ($.LocalStorageHelper.Get("Whois").toUpperCase() == "MySelf".toUpperCase()) {
            $('#authority').val($.LocalStorageHelper.Get("Whois"));
        }
        if ($.LocalStorageHelper.Get("Whois").toUpperCase() == "Sanction".toUpperCase()) {
            $('#authority').val($.LocalStorageHelper.Get("Whois"));
        }
        if ($.LocalStorageHelper.Get("Whois").toUpperCase() == "Approval".toUpperCase()) {
            $('#authority').val($.LocalStorageHelper.Get("Whois"));
        }


    });
</script>
