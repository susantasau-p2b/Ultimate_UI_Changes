            <div class="row2 content_margine">
                @Html.LabelFor(m => m.LTCAdvAmt, "LTC Advance Amount :", new { @class = "popup-content-label must" })
                @Html.TextBoxFor(m => m.LTCAdvAmt, new { @class = "popup-content-textbox must" })
