@{
    Layout = null;
}
@model P2b.Global.Qualification
<style>
    .popup-content-label {
        display: block;
        float: left;
        width: 178px;
    }

    .popup-content-textbox {
        margin-bottom: 1px;
        min-width: 150px;
    }

    .popup-content-textbox-long {
        margin-bottom: 1px;
        width: 290px;
    }

    .row2 {
        width: 402px;
    }
</style>
<div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmQualification" }))
    {
        <input id="autho_action" type="hidden" name="autho_action" />
        <input id="autho_allow" type="hidden" name="autho_allow" />
        <div class="row3 content_margine">
            @Html.LabelFor(m => m.QualificationShortName, "Qualification ShortName :", new { @class = "popup-content-label must" })
            @Html.TextBoxFor(m => m.QualificationShortName, new { @class = "popup-content-textbox must" })
        </div>
        <div class="row3 content_margine">
            @Html.LabelFor(m => m.QualificationDesc, "Qualification Desc :", new { @class = "popup-content-label must" })
            @Html.TextBoxFor(m => m.QualificationDesc, new { @class = "popup-content-textbox must" })
        </div>
        <div class="dropdown_row1 row3 content_margine">@Html.LabelFor(m => m.QualificationType, "Qualification Type :", new { @class = "popup-content-label must" })
    <select id="Qualificationlist1" name="Qualificationlist1" class="must" style="width:161px;"><option></option></select></div>
    }
</div>
<script>
    $(function () {
        $('#Qualificationlist1').selectmenu().selectmenu('menuWidget');
        $('.date').P2BDatePicker();
        $('#Qualificationlist1').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 314, "");
    });
</script>