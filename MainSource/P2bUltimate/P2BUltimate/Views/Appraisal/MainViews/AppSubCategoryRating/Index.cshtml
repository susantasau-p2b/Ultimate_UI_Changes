            });
            event.preventDefault();
        });*@
        $('#Edit-SubCategory-AppSubCategoryRating').button().on("click", function (event) {
            var a = [], b;
            a = $('#AppSubCategoryList').P2BGetTableDataonSelectedRow('#AppSubCategoryList', 0);
            b = a[0];
            $('<div></div>').P2BPatialEditModalDialog('@Url.Action("partial", "AppSubCategory")', '@Url.Action("edit", "AppSubCategory")', b, '@Url.Action("Editsave", "AppSubCategory")', 'Edit App Sub Category', '#frmAppSubCategory', b, 'Message :', 'Request Falied :', '#JqGrid', 195, 429, '#frmAppSubCategoryRating', '#AppSubCategoryList', 'AppSubCategoryList', 'AppSubCategoryList', 'N', '#Edit-SubCategory-AppSubCategoryRating,#Remove-SubCategory-AppSubCategoryRating', function (data) {

                $.each(data[0], function (i, k) {
                    $('#frmAppSubCategory').trigger("reset");
                    $('#SubCode').val(k.Code);
                    $('#SubCode').attr('readonly', 'readonly');
                    $('#SubName').val(k.Name);
                });
            });
            event.preventDefault();
