            //var a = [], b;
            //a = $('#AppSubCategoryList').P2BGetTableDataonSelectedRow('#AppSubCategoryList', 0);
            //b = a[0];
            var selectedRows = [];
            selectedRows = $('#AppSubCategoryList').P2BGetTableDataonSelectedRow('#AppSubCategoryList', 0);
            $('<div></div>').P2BPartialDeleteModalDialog('', selectedRows, 0, 'Are you sure want to delete record???', 'Message : ', 'Request failed', '#AppSubCategoryList', $('#AppSubCategoryList').val(), 200, 200, '#frmAppSubCategoryRating', '#AppSubCategoryList');
            event.preventDefault();
