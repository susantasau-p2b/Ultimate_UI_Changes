                                } else {
                                    alert(data.responseText);
                                    console.log(data);
                                }
                            },
                            complete: function () {
                                $('.ajax_loder').remove();

                            }
                        });


                    }
                }
            });
            event.preventDefault();


        });



        $('#Delete').on('click', function (e) {
            var a = $.GetGridSelctedvalue("#JqGrid", "Id");
            // alert("#JqGrid")
            a = a != null ? a.toString() : null;
            //    console.log(a);
            //   alert(a);
            $.ajax({
                url: "@Url.Action("DeleteProcess")",
