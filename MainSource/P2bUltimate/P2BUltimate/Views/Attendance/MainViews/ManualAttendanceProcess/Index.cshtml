            window.open('rptview/rptBeforeActionOnAttendanceLVatt?parm=22', '_blank');
            e.preventDefault();
        });

        $('#ActionProcess').on('click', function () {
            var mon = $("#txtPayMonth").val();
            $('#process').ProcessConfirmation({
