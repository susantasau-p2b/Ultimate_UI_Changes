<script>
    $(document).ready(function (e) {
        var dt;
        $('button').button();
        var ColNames = [];
        var ColModel = [];
        var SortName, Caption, url, width, height;
        var btndisablenames = "";
        ColModel = ['Name', 'Id'];
        ColNames = ['Name', 'Id'];
        SortName = 'Id';
        Caption = 'Extension Activity';
        url = '@Url.Action("P2BGrid")';
        width = 1000;
        height = 150;
       
        $('#JqGrid').P2BGrid(ColNames, ColModel, SortName, Caption, url, width, height);

        function AssignData() {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');

        }
        $('#Load').on('click', function (e) {
            $('#JqGrid').PostGridData({ url: url, filter: $('#Payscaleagreementdetailslist').val() });
        });
        //create main
        $('#Payscaleagreementdetailslist').selectmenu().selectmenu("menuWidget");
        $('#Payscaleagreementdetailslist').P2BSelectMenuAppend('@Url.Action("PopulateDropDownList", "ExtnRednActivity")', "", "");
        $('#Create_Dialog').P2BCreateDialog();

        $('#Autho').makeDisable('#Create,#Edit,#Delete');


        $('#Create').on("click", function (event) {

            $('#frmExtnRednActivity').trigger("reset");
            $('#Create_Dialog').P2BCreateDialog('', '', '', '', 'Create Extension Reduction Activity', 'open', '@Url.Action("Create")', '#frmExtnRednActivity', 'Message :', 'Request Falied :', '#JqGrid', 500, 600, '#ExtnRednPolicyList', '', function (data) {
              
                $('#ExtnRednList_drop').P2BSelectMenuAppend('@Url.Action("GetLookupValue", "lookup")', 101, "");
                $('#PayscaleagreementdetailsCreatelist').P2BSelectMenuAppend('@Url.Action("PopulateDropDownList", "ExtnRednActivity")', "", "");
            });
            event.preventDefault();
        });



        $('<div></div>').P2BPartialCreateModalDialog();
        $('#Lookup-ExtnRednPolicy-ExtnRednActivity').on('click', function (event) {
            $('.dialog').P2BLookUpModal('@Url.Action("GetLookup_ExtnRednPolicy", "ExtnRednPolicy")', '', 'LookupDiv', 'Trans Policy Look Up Data', '#ExtnRednPolicyList', 'ExtnRednPolicyList', 5, 'ExtnRednPolicyList', '#frmExtnRednActivity', 'N', '', 'Lookup_table', 'PageNavPosition');
            event.preventDefault();
        });

        $('#Create-ExtnRednPolicy-ExtnRednActivity').on("click", function (event) {
            $('<div></div>').P2BPartialCreateModalDialog('@Url.Action("CreateExtnRednPolicy_partial", "ExtnRednPolicy")', 'Create Extension Policy', 'open', '@Url.Action("Create", "ExtnRednPolicy")', '#frmExtnRednPolicy', 'Message :', 'Request Falied :', '#JqGrid', 400, 560, '', '', '', '#frmIncrActivity', '', function (data) {
                // to show data which is created in partial page
                $('#ExtnRednPeriodUnit_drop').selectmenu().selectmenu("menuWidget");
                $('#ExtnRednPeriodUnit_drop').P2BSelectMenuAppend('@Url.Action("GetLookupValue", "lookup")', 3008, "");
                $('#ExtnRednPolicyList').P2BLookUpEncapsulate('#ExtnRednPolicyList', 'ExtnRednPolicyList', data[0], data[1], 'ExtnRednPolicyList', '#Edit-ExtnRednPolicy-ExtnRednActivity,#Remove-ExtnRednPolicy-ExtnRednActivity', 'N');
               
            });
           
            event.preventDefault();
        });

        $('#Edit-ExtnRednPolicy-ExtnRednActivity').button().on("click", function (event) {
            var a = [], b;
            a = $('#ExtnRednPolicyList').P2BGetTableDataonSelectedRow('#ExtnRednPolicyList', 0);
            b = a[0];
            console.log(b);
            
           
            $('<div></div>').P2BPatialEditModalDialog('@Url.Action("CreateExtnRednPolicy_partial", "ExtnRednPolicy")', '@Url.Action("Edit", "ExtnRednPolicy")', b, '@Url.Action("EditSave", "ExtnRednPolicy")', 'Edit ExtnRedn Policy Details', '#frmExtnRednPolicy', b, 'Message :', 'Request Falied :', '#JqGrid', 400, 500, '#frmExtnRednActivity', '#ExtnRednPolicyList', 'ExtnRednPolicyList', 'ExtnRednPolicyList', 'N', '', function (data) {
                // setTimeout(function () {
                $.each(data[0], function (i, k) {
                    $('#frmExtnRednPolicy').trigger("reset");
                    $('#ExtnRednPolicy_Name').val(k.Name);
                    $('#ExtnRednPeriod_Name').val(k.ExtnRednPeriod);
                    $('#MaxCount_Name').val(k.MaxCount);
                    $('#ExtnRednCauseType_drop').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 3007, k.ExtnRednCauseType); 
                    $('#ExtnRednPeriodUnit_drop').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 3008, k.ExtnRednPeriodUnit); 
                    $('[name="IsExtn"]').val([k.IsExtn]).button().button("refresh");
                    $('[name="IsRedn"]').val([k.IsRedn]).button().button("refresh");
                    
                  });

                // }, 3000);
            });
            event.preventDefault();
        });

        $('#Remove-ExtnRednPolicy-ExtnRednActivity').button().on('click', function (event) {
            //dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            //var a = [], b;
            //a = $('#ExtnRednList_drop').P2BGetTableDataonSelectedRow('#ExtnRednPolicyList', 0);
            //b = a[0];

            var selectedRows = [];
            selectedRows = $('#ExtnRednList_drop').P2BGetTableDataonSelectedRow('#ExtnRednPolicyList', 0);

            $('<div></div>').P2BPartialDeleteModalDialog('', selectedRows, 0, 'Are you sure want to delete record???', 'Message : ', 'Request failed', '#ExtnRednPolicyList', $('#ExtnRednPolicyList').val(), 200, 200, '#frmExtnRednActivity', '#ExtnRednPolicyList', '');
            event.preventDefault();
        });
        // Main page edit
        $('#Edit').on('click', function () {
            AssignData();
            $('#Create_Dialog').P2BEditModalDialog('@Url.Action("Edit")', dt.Id, '@Url.Action("EditSave")', "Edit Extension Activity Data", '#frmExtnRednActivity', dt.Id, 'Message : ', 'Request Falied :', '#JqGrid', 500, 620, '#ExtnRednPolicyList', btndisablenames, function (data) {
                // setTimeout(function () {
                $.each(data[0], function (i, k) {
                    console.log(k.Name);
                    $('#Name').val(k.Name);
                    $('#ExtnRednList_drop').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 101, k.ExtnRednList_id); // Dropdown bind
                    $('#ExtnRednPolicyList').P2BLookUpEncapsulate('#ExtnRednPolicyList', 'ExtnRednPolicyList', k.ExtnRednPolicy_Id, k.ExtnRednPolicy_FullDetails, 'ExtnRednPolicyList', '#Edit-ExtnRednPolicy-ExtnRednActivity,#Remove-ExtnRednPolicy-ExtnRednActivity', 'N');
                });
                //partial page bind
                $.each(data[1], function (i, k) {
                     $('#ExtnRednPolicyList').P2BLookUpEncapsulate('#ExtnRednPolicyList', 'ExtnRednPolicyList', k.ExtnRednPolicy_Id, k.ExtnRednPolicy_FullDetails, 'ExtnRednPolicyList', '#Edit-ExtnRednPolicy-ExtnRednActivity,#Remove-ExtnRednPolicy-ExtnRednActivity', 'N');
                    $('#PayscaleagreementdetailsCreatelist').P2BSelectMenuAppend('@Url.Action("PopulateDropDownList", "IncrActivity")', "", k.Payscaleagg_Id);

                });
                //alert(data[3]);
                $('#Autho_Allow').val(data[3]); //Compulsory for authorisation
                // }, 2000);
            });
        });

        //$('.popup_radio_button').buttonset({});
        //View main page
        $('#View').button().click(function (event) {
            AssignData();
            $('#Create_Dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.Id, 'View Transfer Activity Data', '#ExtnRednPolicyList', '', 500, 620, '#Autho', '@Url.Action("AuthSave")', dt.Id, '', '', '', '', '#JqGrid', function (data)
            {
                $.each(data[0], function (i, k) {
                    $('#Autho_Action').val(k.Action);
                    $('#Name').val(k.Name);
                    $('#ExtnRednList_drop').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 101, k.ExtnRednList_id);
                    $('#ExtnRednPolicyList').P2BLookUpEncapsulate('#ExtnRednPolicyList', 'ExtnRednPolicyList', k.ExtnRednPolicy_Id, k.ExtnRednPolicy_FullDetails, 'ExtnRednPolicyList', 'view', 'N');
                    // alert('0');
                });

                $.each(data[1], function (i, k) {
                    //alert('1');
                    $('#PayscaleagreementdetailsCreatelist').P2BSelectMenuAppend('@Url.Action("PopulateDropDownList", "IncrActivity")', "", k.Payscaleagg_Id);
                    //$('#ExtnRednPolicyList').P2BLookUpEncapsulate('#ExtnRednPolicyList', 'ExtnRednPolicyList', k.ExtnRednPolicy_Id, k.ExtnRednPolicy_FullDetails, 'ExtnRednPolicyList', '#Edit-ExtnRednPolicy-ExtnRednActivity,#Remove-ExtnRednPolicy-ExtnRednActivity', 'N');
                });

                //To bind old data if authorisation is true
                if ($("#Autho").hasClass('auto_active')) {
                    //alert('2');
                    // alert(data[2].Name, data[2].IncrList_val)
                    $('#Name').oldVal(data[2].Name);
                    $('#ExtnRednList').oldDropval(data[2].IncrList_val);
                    $('#StagIncr_old').oldLookupVal(data[2].IncrPolicy_val);

                    @*$.each(data[2], function (i, k) {
                        // $('#Code').Oldval(k.Code);
                        alert(k.Name)
                        $('#Name').oldVal(k.Name);
                        $('#Categorylist').oldDropval(k.BusinessType_Val);
                        $('#AddressList_Old').oldLookupVal(k.Address_Val);
                        $('#ContactDetailsList_Old').oldLookupVal(k.Contact_Val);
                        //$('#Categorylist').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 304, k.BusinessType_Id);
                    });*@
                }
                //}, 2000);
            });
        });



        $('#Delete').button().click(function (event) {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            $('#Create_Dialog').P2BDeleteModalDialog('@Url.Action("Delete")', dt.Id, 'Are you sure want to remove record???', 'Message : ', 'Request failed', '#JqGrid', 200, 200);
        });
        $('#Name').ValidateTextBox({ maxlength: 50, name: true });
        $('.popup_radio_button').controlgroup();
        $('#Autho').makeDisable('#Create,#Edit,#Delete');
        $('#Autho').onClickGrid('#JqGrid', '@Url.Action("P2BGrid")', '@Url.Action("P2BGrid")');
        $('.drop').selectmenu().selectmenu('menuWidget');
        $('#PayscaleagreementdetailsCreatelist').selectmenu().selectmenu("menuWidget");
    });
</script>
