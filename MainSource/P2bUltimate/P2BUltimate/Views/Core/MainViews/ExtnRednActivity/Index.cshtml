                    <tr><th>ID</th><th>LookUp Selected Description</th></tr>
                </table>
            </div>
            <div class="icon-row">
                <button data-p2btooltip="Select ExtnRednPolicy" class="popup-content-icon-lookup" id="Lookup-ExtnRednPolicy-ExtnRednActivity"><span class="ui-icon ui-icon-folder-open popup-content-iconmark"></span></button>
                <button data-p2btooltip="Create ExtnRednPolicy" class="popup-content-icon-create" id="Create-ExtnRednPolicy-ExtnRednActivity"><span class="ui-icon ui-icon-newwin popup-content-iconmark"></span></button>
                <button data-p2btooltip="Edit ExtnRednPolicy" class="popup-content-icon-edit" id="Edit-ExtnRednPolicy-ExtnRednActivity"><span class="ui-icon ui-icon-pencil popup-content-iconmark"></span></button>
                <button data-p2btooltip="Remove ExtnRednPolicy" class="popup-content-icon-remove" id="Remove-ExtnRednPolicy-ExtnRednActivity"><span class="ui-icon ui-icon-trash popup-content-iconmark"></span></button>
            </div>

        </div>


    }
</div>
