                    </div>
                    <div class="row1 content_margine">
                        @Html.LabelFor(m => m.Country, "Country :", new { @class = "popup-content-label" })
                        <select class="drop" style="width:120px;" name="CountryList_DDL" id="CountryList_DDL"><option value="0">-Select-</option></select>
