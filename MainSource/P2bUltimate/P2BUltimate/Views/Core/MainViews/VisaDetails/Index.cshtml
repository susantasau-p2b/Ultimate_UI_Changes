                    <div class="row1 content_margine">@Html.LabelFor(m => m.ValidDate, "Expiry Date :", new { @class = "popup-content-label" })@Html.TextBoxFor(m => m.ValidDate, new { @class = "popup-content-textbox" })</div>
                    <div class="row1 content_margine">@Html.LabelFor(m => m.IssueAt, "Issue At :", new { @class = "popup-content-label" })@Html.TextBoxFor(m => m.IssueAt, new { @class = "popup-content-textbox" })</div>

