<script>
    $(document).ready(function (e) {
        $("#IssueAt").ForceOnlyAlphaNumeric();

        $('button').button().on("click", function () { });
        $('#IssueDate,#ValidDate').P2BDatePicker();
        //$('.popup_radio_button').buttonset({})
        var dia;
        $('#FromDate,#ToDate').P2BDatePicker();
        var ColNames = [];
        var ColModel = [];
        var SortName, Caption, url, width, height;
        var btndisablenames = "#Edit-VisaType-Visa,#Remove-VisaType-Visa";
        //ColModel = ['Id', 'IssueAt', 'IssueDate', 'ValidDate'];
        //ColNames = ['Id', 'IssueAt', 'IssueDate', 'ValidDate'];
        ColModel = ['EmpCode', 'EmpName', 'ID'];
        ColNames = [ 'Employee Code', 'Employee Name', 'ID'];
        SortName = 'Code';
        Caption = 'Visa Details';
        url = '@Url.Action("P2BGrid")';
        width = 1000;
        height = 150;
        $('#JqGrid').P2BGrid(ColNames, ColModel, SortName, Caption, url, width, height);

        function DateConvert(JsonDate) {
            var date = new Date(parseInt(JsonDate.substr(6)));
            var displayDate = $.datepicker.formatDate("dd/mm/yy", date);
            return displayDate;
        };



        function AssignData() {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
        }
        $('#Create_Dialog').P2BCreateDialog();

        //Create Function
        $('#Create').on("click", function (event) {
            $('#FormVisa').trigger("reset");
            $('#Section_Emp').fadeIn();
            $.LoadEmpByDefault(true);
            $('#Advance-Filter-Symbol').on('click', function () {
                $("<div></div>").FilterDialog({
                    width: 1000,
                    height: 400,
                    title: "Filter",
                    htmlurl: "@Url.Action("Advance_partial", "Transcation")",
                    returnat: function (data) {
                        console.log(data);
                        var forwarddata = JSON.stringify(data);
                        $('#Employee-Table').P2BTransactionTableDynamic('#Employee-Search', '#Case-Employee', './Transcation/Get_Employelist_h?geo_id=' + forwarddata + '', "");
                        //$('#Employee-Table').P2BTransactionTableDynamic('#Employee-Search', '#Case-Employee', './Transcation/Get_Employelist?geo_id=' + forwarddata + '', "");
                        //$('#pay_id').val(data.PayStruct);
                        //$('#fun_id').val(data.FunStruct);
                    },
                    renderat: "#FormFilter", hierarchy: true,
                });
                //console.log($('#FormFilter')[0]);
            });
            $('#Create_Dialog').P2BCreateDialog('', '', '', '', 'Create Visa Details', 'open', '@Url.Action("Create")', '#FormVisa', 'Message :', 'Request Falied :', '#JqGrid', 490, 956, '', btndisablenames, function (data) { });
            $('#VisaTypelist').P2BSelectMenuAppend('@Url.Action("GetLookupValue", "lookup")', 316, "");
            $('#CountryList_DDL').empty();
            $('#CountryList_DDL').off("selectmenuopen").on("selectmenuopen", function () {
                $('#CountryList_DDL').empty().append("<option value=0 >-Select-</option>").selectmenu().selectmenu("refresh");
                $.post("@Url.Action("PopulateDropDownList","country")", {
                    data: "",
                    data2: ""
                }, function (data) {
                    $.each(data, function (i, k) {
                        $('#CountryList_DDL').append($("<option>", {
                            value: k.Value,
                            text: k.Text,
                            selcted: k.Selected
                        }));
                    });
                    jQuery('#CountryList_DDL').selectmenu('refresh').selectmenu("menuWidget").css({ "height": "120px" });
                });
            });
            event.preventDefault();
        });;


        // Main page edit
        $('#Edit').on('click', function () {
            AssignData();
            $('#Section_Emp').fadeOut();
            $('#Create_Dialog').P2BEditModalDialog('@Url.Action("Edit")', dt.ID, '@Url.Action("EditSave")', "Edit Visa Details->" + JSON.stringify(dt) + "", '#FormVisa', dt.ID, 'Message : ', 'Request Falied :', '#JqGrid', 490, 956, '#CountryList_DDL', btndisablenames, function (data) {
                // setTimeout(function () {
                $.each(data[0], function (i, k) {
                    $('#IssueAt').val(k.IssueAt);

                    //$('#IssueDate').val(k.IssueDate);
                    if (k.IssueDate != null) { $('#IssueDate').val(DateConvert(k.IssueDate)); }
                    //$('#ValidDate').val(k.ValidDate);
                    if (k.ValidDate != null) { $('#ValidDate').val(DateConvert(k.ValidDate)); }
                    $('#CountryList_DDL').P2BSelectMenuAppend("@Url.Action("PopulateDropDownList", "country")", "", k.Country_Id);
                    $('#VisaTypelist').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 316, k.VisaType_Id);
                });

                //alert(data[3]);
                $('#Autho_Allow').val(data[3]); //Compulsory for authorisation
                // }, 2000);
            });
        });


        //View main page
        $('#View').button().click(function (event) {
            AssignData();
            $('#Section_Emp').fadeOut();  @*$('#Create_Dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.Id, 'View', '#BasicScaleDetailslist', '', 356, 512, '#Autho', '@Url.Action("delete")', '', '', '', '','','', function (data) {*@
            $('#Create_Dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.ID, "View Visa Details->" + JSON.stringify(dt) + "", '', '#Lookup-Address-Corporate,#Create-Address-Corporate,#Edit-Address-Corporate,#Remove-Address-Corporate,#Lookup-ContactDetails-Corporate,#Create-ContactDetails-Corporate,#Edit-ContactDetails-Corporate,#Remove-ContactDetails-Corporate', 490, 956, '#Autho', '@Url.Action("AuthSave")', dt.ID, '', '', '', '', '#JqGrid', function (data) {
                $.each(data[0], function (i, k) {
                    $('#Autho_Action').val(k.Action);
                    $('#IssueAt').val(k.IssueAt);

                    if (k.IssueDate != null) { $('#IssueDate').val(DateConvert(k.IssueDate)); }
                    if (k.ValidDate != null) { $('#ValidDate').val(DateConvert(k.ValidDate)); }

                    $('#VisaTypelist').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 316, k.VisaType_Id);
                    $('#CountryList_DDL').P2BSelectMenuAppend("@Url.Action("PopulateDropDownList", "country")", "", k.Country_Id); 
                });



                //To bind old data if authorisation is true
                if ($("#Autho").hasClass('auto_active')) {
                    $('#Name').oldVal(data[2].Name);
                    $('#VisaTypelist').oldDropval(data[2].VisaType_Val);
                    $('#CountryList_DDL').oldDropval(data[2].Country_Val);
                    if (data[2].IssueDate != null) { $('#IssueDate').StickNote(DateConvert(data[2].IssueDate)); }
                    if (data[2].ValidDate != null) { $('#ValidDate').StickNote(DateConvert(data[2].ValidDate)); }
                }
            });
        });

        @*//delete main page
            $('#Delete').button().click(function (event) {
                dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
                $('#Create_Dialog').P2BDeleteModalDialog('@Url.Action("Delete")', 0, 'Are you sure want to remove record???', 'Message : ', 'Request failed', '#JqGrid', 200, 200);
            event.preventDefault();
        });*@


        @*$('#Delete').button().click(function (event) {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            $('#Create_Dialog').P2BDeleteModalDialog('@Url.Action("Delete")', dt.Id, 'Are you sure want to remove record???', 'Message : ', 'Request failed', '#JqGrid', 200, 200);
            event.preventDefault();
        });*@
        $('#Delete').button().click(function (e) {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            $('#Create_Dialog').P2BDeleteModalDialog('@Url.Action("Delete")', dt.ID, 'Are you sure want to remove record???', 'Message : ', 'Request failed', '#JqGrid', 200, 200);
            e.preventDefault();
        });

        $('#Autho').makeDisable('#Create,#Edit,#Delete');
        $('#Autho').onClickGrid('#JqGrid', '@Url.Action("P2BGrid")', '@Url.Action("P2BGrid")');
        $('.drop').selectmenu().selectmenu("menuWidget");
    });
</script>
