            event.preventDefault();
        });


        $('#Lookup-ChargeSheetEnquiryNoticeServing-EnquiryNotice').on('click', function (event) {
            $('.dialog').P2BLookUpModal('@Url.Action("GetLookupDetailsEmployeeDoc", "ChargeSheetEnquiryNoticeServing")', '', 'LookupDiv', 'EmployeeDoc Look Up Data', '#EnquiryNoticeList', 'EnquiryNoticeList', 4, 'EnquiryNoticeList', '#frmChargeSheetEnquiryNoticeserving', 'A', 'Lookup_table', 'PageNavPosition');
            event.preventDefault();
