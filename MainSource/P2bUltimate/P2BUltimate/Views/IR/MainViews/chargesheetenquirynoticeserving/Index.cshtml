    $(document).ready(function () {
        $('button').button();
        var dt;
        var ColNames = [];
        var ColModel = [];
        var SortName, Caption, url, width, height;

        ColModel = ['CaseNo', 'VictimName', 'ProceedingStage', 'ChargeSheetServingModeName', 'IsWitnessReqd', 'IsClosedServing', 'IsChargeSheet Recd', 'Narration', 'Id'];
