
<link href="~/Content/popup_form.css" rel="stylesheet" />
@model IR.ChargeSheetReply
<style>
    .popup-content-label {
        width: 170px;
        display: block;
        float: left;
    }

    .popup-content-textbox {
        width: 120px;
    }

    .row1 {
        width: 320px;
    }

