                @Html.LabelFor(m => m.MinimumBonusAmount, "Minimum Bonus :", new { @class = "popup-content-label" })
                @Html.TextBoxFor(m => m.MinimumBonusAmount, new { @class = "popup-content-textbox", id = "MinimumBonusV" })
