            // $('[name="Default"]').button().button("refresh");
            event.preventDefault();
        });

        $('#Edit').on('click', function () {
            AssignData();
            $('#Create_Dialog').P2BEditModalDialog('@Url.Action("Edit")', dt.Id, '@Url.Action("EditSave")', "Edit ExitProcess CheckList Object Data", '#frmExitProcess_CheckList_Object', dt.Id, 'Message : ', 'Request Falied :', '#JqGrid', 271, 400, '#AddressList,#ContactDetailsList', '', function (data) {
                // setTimeout(function () {
                $.each(data[0], function (i, k) {
                    $('#CheckListItemDesc').val(k.checklistitemdesc);
                    $('#checklistitem_ID').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 3022, k.checklistitem_ID); // Dropdown bind
                });


                $('#Autho_Allow').val(data[3]); //Compulsory for authorisation
                // }, 2000);
            });
        });


        //View main page
        $('#View').button().click(function (event) {
            AssignData();
            $('#Create_Dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.Id, 'View ExitProcess CheckList Object Data', '#AddressList,#ContactDetailsList', '#Lookup-Address-Corporate,#Create-Address-Corporate,#Edit-Address-Corporate,#Remove-Address-Corporate,#Lookup-ContactDetails-Corporate,#Create-ContactDetails-Corporate,#Edit-ContactDetails-Corporate,#Remove-ContactDetails-Corporate', 271, 400, '#Autho', '@Url.Action("AuthSave")', dt.Id, '', '', '', '', '#JqGrid', function (data) {
                $.each(data[0], function (i, k) {
                  //  $('#Autho_Action').val(k.Action);
                    $('#CheckListItemDesc').val(k.checklistitemdesc);
                    $('#checklistitem_ID').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 3022, k.checklistitem_ID); // Dropdown bind
                });



                //if ($("#Autho").hasClass('auto_active')) {
