<script>
    $(document).ready(function (e) {
        $('button').button();
        // $("#PayMonth").val($.datepicker.formatDate("mm/yy", new Date()));
        var ColNames = [];
        var ColModel = [];
        var SortName, Caption, url, width, height;
        ColModel = ['CheckListItem', 'CheckListItemDesc', 'Id'];
        ColNames = ['CheckList Item', 'CheckList Item Desc', 'Id'];
        SortName = 'Id';
        Caption = 'ExitProcess_CheckList_Object';
        url = '@Url.Action("P2BGrid")';
        width = 1000;
        height = 150;
        $('#JqGrid').P2BGrid(ColNames, ColModel, SortName, Caption, url, width, height);

        function AssignData() {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
        }
        @*$('#travelmodelist').on('selectmenuchange', function () {
            $('#classoftravellist').P2BSelectMenuAppend('@Url.Action("ClassOffTravelList", "SeperationMaster")', $(this).val(), "", "0");
        });*@

        $('#Create_Dialog').P2BCreateDialog();
        $('#Create').on("click", function (event) {
            $('#frmExitProcess_CheckList_Object').trigger("reset");
            $('#Create_Dialog').P2BCreateDialog('', '', '', '', 'Create ExitProcess_CheckList_Object', 'open', '@Url.Action("Create")', '#frmExitProcess_CheckList_Object', 'Message :', 'Request Falied :', '#JqGrid', 271, 500, '', '', function (data) { });
