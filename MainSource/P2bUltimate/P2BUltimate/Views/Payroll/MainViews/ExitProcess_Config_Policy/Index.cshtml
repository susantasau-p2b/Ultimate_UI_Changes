<script>
    $(document).ready(function (e) {
        $('button').button();
        // $("#PayMonth").val($.datepicker.formatDate("mm/yy", new Date()));
        var ColNames = [];
        var ColModel = [];
        var SortName, Caption, url, width, height;
        ColModel = ['FFSSettlementPeriod_FromLastWorkDay', 'NoDuesActivation_BFLastWorkDay', 'ProcessConfigName', 'Id'];
        ColNames = ['FFSSettlementPeriod_FromLastWorkDay ', 'NoDuesActivation_BFLastWorkDay ', 'ProcessConfigName', 'Id'];
