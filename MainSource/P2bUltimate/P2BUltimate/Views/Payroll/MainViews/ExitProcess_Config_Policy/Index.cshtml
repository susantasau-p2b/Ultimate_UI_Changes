        width = 1000;
        height = 150;
        $('#JqGrid').P2BGrid(ColNames, ColModel, SortName, Caption, url, width, height);

        function AssignData() {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
        }
        @*$('#travelmodelist').on('selectmenuchange', function () {
            $('#classoftravellist').P2BSelectMenuAppend('@Url.Action("ClassOffTravelList", "SeperationMaster")', $(this).val(), "", "0");
        });*@
       
        $('#Create_Dialog').P2BCreateDialog();
        $('#Create').on("click", function (event) {
            $('#frmExitProcess_Config_Policy').trigger("reset");
            $('#hideshowcombinedleavehead').hide();
            // $('#hideshowcombinedleavehead').fadeOut();
            $('#Create_Dialog').P2BCreateDialog('', '', '', '', 'Create ExitProcess_Config_Policy', 'open', '@Url.Action("Create")', '#frmExitProcess_Config_Policy', 'Message :', 'Request Falied :', '#JqGrid', 500, 800, '#LeaveHeadlist', "", function (data) { });
