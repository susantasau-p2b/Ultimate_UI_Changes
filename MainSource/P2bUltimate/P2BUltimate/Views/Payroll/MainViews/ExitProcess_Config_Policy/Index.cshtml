            $('[name="IsLeavesAvailAppl"]').val([false]).button().button("refresh");
            $('#PreDays').prop("disabled", true);
            $('#PostDays').prop("disabled", true);
            $('#txtlvhead').attr('readonly', 'readonly');

            event.preventDefault();
        });

        //function DateConvert(JsonDate) {
            //    var date = new Date(parseInt(JsonDate.substr(6)));
            //    var displayDate = $.datepicker.formatDate("dd/mm/yy", date);
            //    return displayDate;
        //};



        $('#Edit').on('click', function () {
            AssignData();
            $('#Create_Dialog').P2BEditModalDialog('@Url.Action("Edit")', dt.Id, '@Url.Action("EditSave")', "Edit ExitProcess_Config_Policy Data", '#frmExitProcess_Config_Policy', dt.Id, 'Message : ', 'Request Falied :', '#JqGrid', 540, 650, '#AddressList,#ContactDetailsList', '', function (data) {
                // setTimeout(function () {
                $.each(data[0], function (i, k) {
                    $('#frmExitProcess_Config_Policy').trigger("reset");
                    $('#ProcessConfigName').val(k.ProcessConfigName);
                    $('#FFSSettlementPeriod_FromLastWorkDay').val(k.FFSSettlementPeriod_FromLastWorkDay);
                    $('#NoDuesActivation_BFLastWorkDay').val(k.NoDuesActivation_BFLastWorkDay);
                    $('[name="IsFFSStatementAcceptanceAppl"]').val([k.IsFFSStatementAcceptanceAppl]).button().button("refresh");
                    $('[name="IsExitInterviewOnReqAcceptance"]').val([k.IsExitInterviewOnReqAcceptance]).button().button("refresh");
                    $('[name="IsLeavesAvailAppl"]').val([k.IsLeavesAvailAppl]).button().button("refresh");
                    
                    if (k.IsLeavesAvailAppl == true) {
                        $('#hideshowcombinedleavehead').fadeIn();
                    }
                    else {
                        $('#hideshowcombinedleavehead').fadeOut();
                    }
                    $('[name="IsSalaryStopOnResignDate"]').val([k.IsSalaryStopOnResignDate]).button().button("refresh");
                    $('[name="IsSettlementOnLastWorkingDay"]').val([k.IsSettlementOnLastWorkingDay]).button().button("refresh");
                    $('[name="IsLastDayAsNoticePeriodLastWorkDay"]').val([k.IsLastDayAsNoticePeriodLastWorkDay]).button().button("refresh");
                    $('[name="IsLastWorkDateManual"]').val([k.IsLastWorkDateManual]).button().button("refresh");
                });
                $.each(data[1], function (i, k) {

                    $('#LeaveHeadlist').P2BLookUpEncapsulate('#LeaveHeadlist', 'LeaveHeadlist', k.LvHeadObjCLH_Id, k.LvHeadObjCLH_FullDetails, 'ConvertLeaveHeadlist', '#Remove-LeaveHead-ExitProcessConfigPolicy', 'A');
                    
                });

                $('#Autho_Allow').val(data[3]); //Compulsory for authorisation
                // }, 2000);
            });
        });

        $('#Remove-LeaveHead-ExitProcessConfigPolicy').button().on('click', function (event) {
            //dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            //var a = [], b;
            //a = $('#LeaveHeadlist').P2BGetTableDataonSelectedRow('#LeaveHeadlist', 0);
            //b = a[0];
