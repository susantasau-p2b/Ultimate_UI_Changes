            selectedRows = $('#LeaveHeadlist').P2BGetTableDataonSelectedRow('#LeaveHeadlist', 0);
            $('<div></div>').P2BPartialDeleteModalDialog('', selectedRows, 0, 'Are you sure want to delete record???', 'Message : ', 'Request failed', '#LeaveHeadlist', $('#LeaveHeadlist').val(), 200, 200, '#frmExitProcess_Config_Policy', '#LeaveHeadlist', '#Remove-LeaveHead-ExitProcessConfigPolicy');
            event.preventDefault();
        });
        //View main page
        $('#View').button().click(function (event) {
            AssignData();
            $('#Create_Dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.Id, 'View ExitProcess_Config_Policy Data', '#AddressList,#ContactDetailsList', '#Lookup-Address-Corporate,#Create-Address-Corporate,#Edit-Address-Corporate,#Remove-Address-Corporate', 540, 650, '#Autho', '@Url.Action("AuthSave")', dt.Id, '', '', '', '', '#JqGrid', function (data) {
                $.each(data[0], function (i, k) {
                    $('#frmExitProcess_Config_Policy').trigger("reset");
                    $('#ProcessConfigName').val(k.ProcessConfigName);
                    $('#FFSSettlementPeriod_FromLastWorkDay').val(k.FFSSettlementPeriod_FromLastWorkDay);
                    $('#NoDuesActivation_BFLastWorkDay').val(k.NoDuesActivation_BFLastWorkDay);
                    $('[name="IsFFSStatementAcceptanceAppl"]').val([k.IsFFSStatementAcceptanceAppl]).button().button("refresh");
                    $('[name="IsExitInterviewOnReqAcceptance"]').val([k.IsExitInterviewOnReqAcceptance]).button().button("refresh");
                    $('#Remove-LeaveHead-ExitProcessConfigPolicy').attr('readonly', 'readonly');
                    $('[name="IsLeavesAvailAppl"]').val([data[0].IsLeavesAvailAppl]).button().button("refresh");
                    if (data[0].IsLeavesAvailAppl == true) {
                        $('#hideshowcombinedleavehead').fadeIn();
                    }
                    else {
                        $('#hideshowcombinedleavehead').fadeOut();
                    }
                    $('[name="IsSalaryStopOnResignDate"]').val([k.IsSalaryStopOnResignDate]).button().button("refresh");
                    $('[name="IsSettlementOnLastWorkingDay"]').val([k.IsSettlementOnLastWorkingDay]).button().button("refresh");
                    $('[name="IsLastDayAsNoticePeriodLastWorkDay"]').val([k.IsLastDayAsNoticePeriodLastWorkDay]).button().button("refresh");
                    $('[name="IsLastWorkDateManual"]').val([k.IsLastWorkDateManual]).button().button("refresh");
                });


                $('#Autho_Allow').val(data[3]);
            });
        });

        //delete main page
        $('#Delete').button().click(function (event) {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            $('#Create_Dialog').P2BDeleteModalDialog('@Url.Action("Delete")', dt.Id, 'Are you sure want to remove record???', 'Message : ', 'Request failed', '#JqGrid', 200, 200);
            event.preventDefault();
        });
        $('<div></div>').P2BPartialCreateModalDialog();
        // $('.popup_radio_button').controlgroup();
        $('.drop').selectmenu().selectmenu("menuWidget");
        $('#PayProcessGroupList').selectmenu().selectmenu("menuWidget");
        // $('#AmountList').selectmenu().selectmenu("menuWidget");
        $('#ProcTypeList').selectmenu().selectmenu("menuWidget");
        $('.popup_radio_button').controlgroup();
    });


    $('#Lookup-LeaveHead-ExitProcessConfigPolicy').on('click', function (event) {
        $('.dialog').P2BLookUpModal('@Url.Action("GetLookupDetails", "LvHead")', '', 'LookupDiv', 'Look Up Data', '#LeaveHeadlist', 'LeaveHeadlist', 5, 'LeaveHeadlist', '#frmExitProcess_Config_Policy', 'A', '#Remove-LeaveHead-ExitProcess_Config_Policy', 'Lookup_table', 'PageNavPosition');
