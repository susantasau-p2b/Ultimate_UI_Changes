    });

    $('#FFSSettlementPeriod_FromLastWorkDay').on('input', function () {
        // Remove all non-numeric characters except minus sign ("-")
        $('#FFSSettlementPeriod_FromLastWorkDay').val($('#FFSSettlementPeriod_FromLastWorkDay').val().replace(/[^0-9-]/g, ''));
    });
    $('#NoDuesActivation_BFLastWorkDay').on('input', function () {
        // Remove all non-numeric characters except minus sign ("-")
        $('#NoDuesActivation_BFLastWorkDay').val($('#NoDuesActivation_BFLastWorkDay').val().replace(/[^0-9-]/g, ''));
    });

    //$('#FFSSettlementPeriod_FromLastWorkDay').ForceOnlyNumeric();
    //$('#NoDuesActivation_BFLastWorkDay').ForceOnlyNumeric();


    $('input[name="IsLeavesAvailAppl"]:radio').change(function () {
        if (this.value == "false") {
            $('#hideshowcombinedleavehead').fadeOut();
        }
