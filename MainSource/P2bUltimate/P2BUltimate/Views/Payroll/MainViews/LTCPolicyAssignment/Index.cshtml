<script>
    $(document).ready(function (e) {
        $('button').button();
        var ColNames = [];
        var ColModel = [];
        var SortName, Caption, url, width, height;
        var btndisablenames = "#Edit-Address-Corporate,#Remove-Address-Corporate,#Edit-ContactDetails-Corporate,#Remove-ContactDetails-Corporate";
        ColModel = ['PolicyName', 'PayScaleAgreementFullDetails', 'Id'];
        ColNames = ['PolicyName', 'PayScaleAgreement', 'Id'];
        SortName = 'Id';
        Caption = 'LTC Policy Assignment';
        url = '@Url.Action("P2BGrid")';
        width = 1000;
        height = 150;
        $('#JqGrid').P2BGrid(ColNames, ColModel, SortName, Caption, url, width, height);

        function AssignData() {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
        }

        $('#Create_Dialog').P2BCreateDialog();

        //Create Function
        $('#Create').on("click", function (event) {
            $('#frmLTCPolicyAssignment').trigger("reset");
            $('#Create_Dialog').P2BCreateDialog('', '', '', '', 'Create LTCPolicyAssignment', 'open', '@Url.Action("Create")', '#frmLTCPolicyAssignment', 'Message :', 'Request Falied :', '#JqGrid', 500, 620, '#AddressList,#ContactDetailsList', "", function (data) { });
            $('#PolicyNamelist').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "LTCPolicyAssignment")", 810, "", '#PolicyNamelist');
            event.preventDefault();
        });

        function DateConvert(JsonDate) {
            var date = new Date(parseInt(JsonDate.substr(6)));
            var displayDate = $.datepicker.formatDate("dd/mm/yy", date);
            return displayDate;
        };
        // Main page edit
        $('#Edit').on('click', function () {
            AssignData();
            $('#Create_Dialog').P2BEditModalDialog('@Url.Action("Edit")', dt.Id, '@Url.Action("EditSave")', "Edit LTCPolicyAssignment  Data", '#frmLTCPolicyAssignment', dt.Id, 'Message : ', 'Request Falied :', '#JqGrid', 500, 620, '#PolicyNamelist,#LTCFormulalist', "", function (data) {
                $.each(data[0], function (i, k) {

                    $('#PolicyNamelist').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "LTCPolicyAssignment")", 810, k.PolicyName);
                    $('#PayScaleAgreementlist').P2BLookUpEncapsulate('#PayScaleAgreementlist', 'PayScaleAgreementlist', k.PayScaleAgreement_Id, k.PayScaleAgreement_FullDetails, 'PayScaleAgreementlist', '#Remove-PayScaleAgreement-LTCPolicyAssignment', 'N');

                });

                //partial page bind
                $.each(data[1], function (i, k) {
                    ////debugger;
                    $('#LTCFormulalist').P2BLookUpEncapsulate('#LTCFormulalist', 'LTCFormulalist', k.LTCFormula_Id, k.LTCFormula_fulldetails, 'LTCFormulalist', '#Remove-LTCFormula-LTCPolicyAssignment', 'A');
                });
                //alert(data[3]);
                $('#Autho_Allow').val(data[3]); //Compulsory for authorisation
                // }, 2000);
            });
        });


        //View main page
        $('#View').button().click(function (event) {
            AssignData();
            @*$('#Create_Dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.Id, 'View', '#BasicScaleDetailslist', '', 356, 512, '#Autho', '@Url.Action("delete")', '', '', '', '','','', function (data) {*@
            $('#Create_Dialog').P2BViewModalDialog('@Url.Action("Edit")', dt.Id, 'View LTCPolicyAssignment Data', '#AddressList,#ContactDetailsList', '#Lookup-Address-Corporate,#Create-Address-Corporate,#Edit-Address-Corporate,#Remove-Address-Corporate,#Lookup-ContactDetails-Corporate,#Create-ContactDetails-Corporate,#Edit-ContactDetails-Corporate,#Remove-ContactDetails-Corporate', 500, 620, '#Autho', '@Url.Action("AuthSave")', dt.Id, '', '', '', '', '#JqGrid', function (data) {
                $.each(data[0], function (i, k) {
                    $('#PolicyNamelist').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "LTCPolicyAssignment")", 810, k.PolicyName);
                    $('#PayScaleAgreementlist').P2BLookUpEncapsulate('#PayScaleAgreementlist', 'PayScaleAgreementlist', k.PayScaleAgreement_Id, k.PayScaleAgreement_FullDetails, 'PayScaleAgreementlist', 'view', 'N');
                });

                $.each(data[1], function (i, k) {
                    console.log("fdsfdsf");
                    console.log(k);
                    console.log("fdsfdsf");
                    $('#LTCFormulalist').P2BLookUpEncapsulate('#LTCFormulalist', 'LTCFormulalist', k.LTCFormula_Id, k.LTCFormula_fulldetails, 'LTCFormulalist', '#Remove-LTCFormula-LTCPolicyAssignment', 'A');
                });

                //To bind old data if authorisation is true
                if ($("#Autho").hasClass('auto_active')) {
                    if (data[2] != null) {
                        $('#Name').oldVal(data[2].Name);
                        $('#Categorylist').oldDropval(data[2].BusinessType_Val);
                        $('#AddressList_Old').oldLookupVal(data[2].Address_Val);
                        $('#ContactDetailsList_Old').oldLookupVal(data[2].Contact_Val);
                    }
                }
                //}, 2000);
            });
        });

        //delete main page
        $('#Delete').button().click(function (event) {
            dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            $('#Create_Dialog').P2BDeleteModalDialog('@Url.Action("Delete")', dt.Id, 'Are you sure want to remove record???', 'Message : ', 'Request failed', '#JqGrid', 200, 200);
            event.preventDefault();
        });


        /* ContactDetails button click*/

        $('#Lookup-PolicyName-LTCPolicyAssignment').on('click', function (event) {
            $('.dialog').P2BLookUpModal('@Url.Action("GetLookupPolicyName", "LTCPolicyAssignment")', '', 'LookupDiv', 'Look Up Data', '#PolicyNamelist', 'PolicyNamelist', 5, 'PolicyNamelist', '#frmLTCPolicyAssignment', 'N', '#Remove-PolicyName-LTCPolicyAssignment', 'Lookup_table', 'PageNavPosition');
            event.preventDefault();
        });


        $('#Lookup-LTCFormula-LTCPolicyAssignment').on('click', function (event) {
            $('.dialog').P2BLookUpModal('@Url.Action("GetLookupLTCformula", "LTCPolicyAssignment")', '', 'LookupDiv', 'Look Up Data', '#LTCFormulalist', 'LTCFormulalist', 5, 'LTCFormulalist', '#frmLTCPolicyAssignment', 'A', '#Remove-LTCFormula-LTCPolicyAssignment', 'Lookup_table', 'PageNavPosition');
            event.preventDefault();
        });




        $('#Remove-LTCFormula-LTCPolicyAssignment').button().on('click', function (event) {
            // dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            //var a = [], b;
            //a = $('#LTCFormulalist').P2BGetTableDataonSelectedRow('#LTCFormulalist', 0);
            //b = a[0];
            var selectedRows = [];
            selectedRows = $('#LTCFormulalist').P2BGetTableDataonSelectedRow('#LTCFormulalist', 0);
            $('<div></div>').P2BPartialDeleteModalDialog('', selectedRows, 0, 'Are you sure want to delete record???', 'Message : ', 'Request failed', '#LTCFormulalist', $('#LTCFormulalist').val(), 200, 200, '#frmLTCPolicyAssignment', '#LTCFormulalist', '');
            event.preventDefault();
        });


        $('#Lookup-PayScaleAgreement-LTCPolicyAssignment').on('click', function (event) {
            $('.dialog').P2BLookUpModal('@Url.Action("GetLookupPayscaleagreement", "LTCPolicyAssignment")', '', 'LookupDiv', 'Look Up Data', '#PayScaleAgreementlist', 'PayScaleAgreementlist', 5, 'PayScaleAgreementlist', '#frmLTCPolicyAssignment', 'N', '#Remove-PayScaleAgreement-LTCPolicyAssignment', 'Lookup_table', 'PageNavPosition');
            event.preventDefault();
        });

        $('#Remove-PayScaleAgreement-LTCPolicyAssignment').button().on('click', function (event) {
            // dt = $('#JqGrid').P2BGrid.P2BEdDelV('#JqGrid', 'Id');
            //var a = [], b;
            //a = $('#PayScaleAgreementlist').P2BGetTableDataonSelectedRow('#PayScaleAgreementlist', 0);
            //b = a[0];
            var selectedRows = [];
            selectedRows = $('#PayScaleAgreementlist').P2BGetTableDataonSelectedRow('#PayScaleAgreementlist', 0);
            $('<div></div>').P2BPartialDeleteModalDialog('', selectedRows, 0, 'Are you sure want to delete record???', 'Message : ', 'Request failed', '#PayScaleAgreementlist', $('#PayScaleAgreementlist').val(), 200, 200, '#frmLTCPolicyAssignment', '#PayScaleAgreementlist', '');
            event.preventDefault();
        });


        $('.popup_radio_button').controlgroup();
        $('#Autho').makeDisable('#Create,#Edit,#Delete');
        $('#Autho').onClickGrid('#JqGrid', '@Url.Action("P2BGrid")', '@Url.Action("P2BGrid")');
        $('.drop').selectmenu().selectmenu("menuWidget").addClass("overflow");
    });
</script>

