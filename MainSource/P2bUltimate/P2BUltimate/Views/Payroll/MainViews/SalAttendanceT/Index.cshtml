        widthD = 800;
        heightD = 200;
        // jQuery("#JqGrid").jqGrid('hideCol', ["PayScaleAgreement"]);
        //$("#JqGrid").jqGrid('hideCol', ["PayScaleAgreement"]);



        $('#izUpload').on('click', function (e) {
            $('<div></div>').PartialCreateDialog({
                height: '500',
                width: '700',
