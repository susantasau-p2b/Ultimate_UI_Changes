                            },
                            error: function (data) {
                                $('<div></div>').P2BMessageModalDialog('ui-icon-info', "Process Is Not Over");
                            },
                            complete: function (data) {
                                $('.ajax_loder').remove();
                            }
                        });

                    }
                }
            });
            e.preventDefault();
        });
