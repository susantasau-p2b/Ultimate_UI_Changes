@{
    Layout = null;
}
@model   Appraisal.AppraisalPublish
<!DOCTYPE html>

<html>
<head>
    <title></title>
    <style>
        .icon-row {
            position: relative;
            left: 53px;
            top: -150px;
        }

        #BusinessType-button {
            font-size: 9px;
            padding-top: 1px;
            font-weight: bold;
        }

        .popup-content-label {
            width: 93px;
            display: block;
            float: left;
            margin: 1px;
        }

        .popup-content-label-2 {
            width: 100px;
            display: block;
            float: left;
            margin: 1px;
        }

        .popup-content-textbox {
            margin-bottom: 1px;
            min-width: 150px;
        }

        .row3 {
            width: 402px;
        }

        .row4 {
            position: absolute;
            top: 294px;
            width: 400px;
        }

        .row6 {
            width: 370px;
            display: inline-block;
        }

        .popup-content-textbox-long {
            margin-bottom: 1px;
            width: 290px;
        }


        .row2 {
            width: 402px;
        }
    </style>
</head>

<body>
    

    <div class="dialog">
        <div title="LookUp Data">
            <div class="LookupDiv"></div>
        </div>
        <div id="PageNavPosition">

        </div>
    </div>

    <div id="Create_Dialog" title="Create Apprisal Category">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { Id = "FormAppraisalPublish", name = "FormAppraisalPublish" }))
        {
            <input id="Autho_Action" type="hidden" name="Autho_Action" />
            <input id="Autho_Allow" type="hidden" name="Autho_Allow" />

            <div class="row6 content_margine">     @Html.LabelFor(m => m.PublishDate, "Publish Date:", new { @class = "popup-content-label must" })@Html.TextBoxFor(m => m.PublishDate, new { @class = "popup-content-textbox date must" })</div>

            <div class="row6 content_margine">     @Html.LabelFor(m => m.SpanPeriod, "Span Period :", new { @class = "popup-content-label must" })@Html.TextBoxFor(m => m.SpanPeriod, new { @class = "popup-content-textbox " })  </div>

            <div class="row6 content_margine">     @Html.LabelFor(m => m.Extension, "Extension :", new { @class = "popup-content-label must" })@Html.TextBoxFor(m => m.Extension, new { @class = "popup-content-textbox must" })  </div>

            <div class="row1 content_margine horizontal_row1">
                @Html.LabelFor(m => m.IsTrClose, " Is Batch Complete :", new { @class = "popup-content-label" })
                <div class="popup_radio_button radio_button_div_1">
                    <span class="popup_radio_button radio_button_div_1">
                        <input type="radio" id="radio1" name="IsTrClose" value="true" /> <label for="radio1">Yes</label>
                        <input type="radio" id="radio2" name="IsTrClose" value="false" checked="checked"/> <label for="radio2">No</label>
                    </span>
                </div>
            </div>
        }
    </div>

</body>
</html>

<script>
    $(document).ready(function (e) {
        $('button').button();
        
       
        $("#Extension").ForceOnlyNumeric().MaxLength(8);
        $("#SpanPeriod").ForceOnlyNumeric().MaxLength(8);
        

        $('.date').P2BDatePicker();
        $('.popup_radio_button').controlgroup();
        $('.drop').selectmenu().selectmenu('menuWidget').addClass('overflow');
        $('#Autho').makeDisable('#Create,#Edit,#Delete');
        $('#Autho').onClickGrid('#JqGrid', '@Url.Action("P2BGrid")', '@Url.Action("P2BGrid")');
    });
</script>































