
@{
    Layout = null;
}

<style>
    .dis_popup-content-label {
        display: block;
        margin: 1px;
        float: left;
        width: 70px;
    }

    .dis_popup-content-textbox {
        margin-bottom: 1px;
        min-width: 59%;
    }

    .dis_row3 {
        width: 250px;
    }
</style>
<div>
        <form id = "FormDistrict" method="post">
            <div class="dis_row3 content_margine">
                <label class="dis_popup-content-label must">Code :</label>
                <input type="text" id="DistrictCode" name="Code" class="dis_popup-content-textbox must" maxlength="10" />
            </div>
            <div class="dis_row3 content_margine">
                <label class="dis_popup-content-label must">Name :</label>
                <input type="text" id="DistrictName" name="Name" class="dis_popup-content-textbox must" maxlength="50" />
            </div>
        </form>
</div>

<script>
    $(document).ready(function () {
        //$('#DistrictCode').ForceOnlyAlphaNumeric();
