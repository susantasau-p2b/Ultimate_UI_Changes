@{
    Layout = null;
}
@model P2b.Global.Language
<style>
    .lan_popup-content-textbox {
        margin-bottom: 1px;
        min-width: 59%;
    }

    .lan_popup-content-label {
        display: block;
        float: left;
        width: 95px;
    }

    .lan_popup {
        width: 295px;
    }
</style>
<div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmLanguage" }))
    {
        <input id="Autho_Action" type="hidden" name="Autho_Action" />
        <input id="Autho_Allow" type="hidden" name="Autho_Allow" />
        <div class="row3 content_margine">
            @Html.LabelFor(m => m.LanguageName, "Language Name :", new { @class = "popup-content-label must" })
            @Html.TextBoxFor(m => m.LanguageName, new { @class = "popup-content-textbox must", @maxlength = "50" })
        </div>

    }
</div>
<script>
    $(function () {
        $('.drop').selectmenu().selectmenu('menuWidget');
        $('.date').P2BDatePicker();
        $('.popup_radio_button').controlgroup();
        $('#LanguageName').ValidateTextBox({ maxlength: 50, name: true });
    });
</script>
