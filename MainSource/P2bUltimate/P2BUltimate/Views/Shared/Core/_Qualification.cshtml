@{
    Layout = null;
}
@model P2b.Global.Qualification
@*<link rel="stylesheet" type="text/css" href="~/Content/mb-ui.css" />*@
<style>
    .popup-content-label-partial-2 {
        display: block;
        float: left;
        width: 178px;
    }

    .popup-content-textbox-partial-2 {
        margin-bottom: 1px;
        min-width: 150px;
    }
</style>
<div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormQualification" }))
    {
        <input id="Autho_Action" type="hidden" name="Autho_Action" />
        <input id="Autho_Allow" type="hidden" name="Autho_Allow" />
          <div class="dropdown_row1 row3 content_margine">@Html.LabelFor(m => m.QualificationType, "Qualification Type :", new { @class = "popup-content-label-partial-2 must "  })<select id="QualificationList1_DDL" name="Qualificationlist1" class="drop must"><option></option></select></div>
          <div class="row3 content_margine">
                @Html.LabelFor(m => m.QualificationShortName, "Qualification ShortName :", new { @class = "popup-content-label-partial-2 must" })
                @Html.TextBoxFor(m => m.QualificationShortName, new { @class = "popup-content-textbox-partial-2 must", @id= "QualificationShortName", @maxlength="50" })
            </div>
        
          <div class="row3 content_margine">
                @Html.LabelFor(m => m.QualificationDesc, "Qualification Desc :", new { @class = "popup-content-label-partial-2 must" })
                @Html.TextBoxFor(m => m.QualificationDesc, new { @class = "popup-content-textbox-partial-2 must", @id = "QualificationDesc", @maxlength = "250" })
            </div>
    }
</div>
<script>
    $(function () {

        $('#QualificationShortName').MaxLength(50);
        $('#QualificationDesc').MaxLength(250);

        $('#QualificationList1_DDL').selectmenu().selectmenu('menuWidget');
        $('.date').P2BDatePicker();
        $('#QualificationList1_DDL').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 314, "");
    });
</script>