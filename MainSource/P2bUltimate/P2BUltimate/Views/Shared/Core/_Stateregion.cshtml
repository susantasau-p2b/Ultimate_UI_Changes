@{
    Layout = null;
}
@model P2b.Global.StateRegion
<script type="text/javascript" src="~/Scripts/P2b_Scripts/jQuery.mbValidations.js"></script>
<style>
    .statere_popup-content-label {
        display: block;
        margin: 1px;
        float: left;
        width: 70px;
    }

    .statere_popup-content-textbox {
        margin-bottom: 1px;
        min-width: 59%;
    }

    .statere_row3 {
        width: 250px;
    }
</style>
<div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmStateRegion" }))
    {
        <div class="statere_row3 content_margine">@Html.LabelFor(m => m.Code, "Code :", new { @class = "statere_popup-content-label must" })@Html.TextBoxFor(m => m.Code, new { @class = "statere_popup-content-textbox must", id = "RegionCode", @maxlength = "10" })</div>
        <div class="statere_row3 content_margine">@Html.LabelFor(m => m.Name, "Name :", new { @class = "statere_popup-content-label must" })@Html.TextBoxFor(m => m.Name, new { @class = "statere_popup-content-textbox must", id = "RegionName", @maxlength = "30" })</div>
    }
</div>
<script>
    $(document).ready(function () {
        //$('#RegionCode').ForceOnlyAlphaNumeric();
        //$('#RegionCode').MaxLength(10);
        $('#RegionCode').ValidateTextBox({ maxlength: 10, name: true });
        $('#RegionName').MaxLength(30);
    });

</script>