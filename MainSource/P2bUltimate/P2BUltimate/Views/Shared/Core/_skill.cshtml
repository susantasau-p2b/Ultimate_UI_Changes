@model P2b.Global.Skill
@{
    Layout = null;
}
<style>
    .popup-content-label-partial-1 {
        display: block;
        float: left;
        width: 88px;
    }

    .popup-content-textbox-partial-1 {
        margin-bottom: 1px;
        min-width: 150px;
    }
</style>

<script>
   $(document).ready(function () {

       $('#Name').ValidateTextBox({ maxlength: 50, name: true });
       $('#SkillTypeList_DDL').selectmenu().selectmenu('menuWidget');
       $('#SkillTypeList_DDL').P2BSelectMenuAppend('@Url.Action("GetLookupValue", "lookup")', 315, "");

   });

</script>
<div>

    <div id="Create_Dialog" title="Create Skill">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { Id = "FormSkill", name = "frmSkillCreate" }))
        {
            <input id="Autho_Action" type="hidden" name="Autho_Action" />
            <input id="Autho_Allow" type="hidden" name="Autho_Allow" />
            <div class="row3 content_margine">@Html.LabelFor(m => m.SkillType, "Skill Type :", new { @class = "popup-content-label-partial-1 must " })<select id="SkillTypeList_DDL" name="SkillTypelist" class="drop must"><option></option></select></div>
            <div class="row3 content_margine">
                @Html.LabelFor(m => m.Name, "Skill Name :", new { @class = "popup-content-label-partial-1 must" })
                @Html.TextBoxFor(m => m.Name, new { @class = ".popup-content-textbox-partial-1 must" })
            </div>
        }
    </div>

</div>