            event.preventDefault();
        });

        $('#Edit-CPIUnitCalc').button().on("click", function (event) {
            var a = [], b;
            a = $('#CPIUnitCalclist').P2BGetTableDataonSelectedRow('#CPIUnitCalclist', 0);
