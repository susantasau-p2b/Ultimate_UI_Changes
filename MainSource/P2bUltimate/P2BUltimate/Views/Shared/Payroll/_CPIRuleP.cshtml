        $('#Remove-CPIUnitCalc').button().on('click', function (event) {
            //var a = [], b;
            //a = $('#CPIUnitCalclist').P2BGetTableDataonSelectedRow('#CPIUnitCalclist', 0);
            //b = a[0];
            //console.log(b);

