                </table>
            </div>
            <div class="icon-row">
                <button data-p2btooltip="Select LoanAdvanceHead" class="  popup-content-icon-lookup" id="Lookup-Wages-LoanAdvancePolicy"><span class="ui-icon ui-icon-folder-open popup-content-iconmark"></span></button>
                @*<button data-p2btooltip="Create LoanAdvanceHead" class="popup-content-icon-create" id="Create-LoanAdvanceHead-LoanAdvanceHead"><span class="ui-icon ui-icon-newwin popup-content-iconmark"></span></button>
                    <button data-p2btooltip="Edit LoanAdvanceHead" class="popup-content-icon-edit" id="Edit-LoanAdvanceHead-LoanAdvanceHead"><span class="ui-icon ui-icon-pencil popup-content-iconmark"></span></button>*@
