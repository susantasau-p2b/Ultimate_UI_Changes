            @Html.LabelFor(m => m.IsLoanLimit, "Limit Applicable:", new { @class = "popup-content-label" })
            <div class="popup_radio_button radio_button_div_2 ">
                @Html.RadioButtonFor(m => m.IsLoanLimit, "true", new { type = "radio", @id = "radio3" })
                @Html.Label("Yes", new { @for = "radio3" })
                @Html.RadioButtonFor(m => m.IsLoanLimit, "false", new { type = "radio", @id = "radio4" })
                @Html.Label("No", new { @for = "radio4" })
            </div>
        </div>
        <div class="row3  content_margine">
            @Html.LabelFor(m => m.IsFixAmount, "Is Fixed Amt:", new { @class = "popup-content-label" })
