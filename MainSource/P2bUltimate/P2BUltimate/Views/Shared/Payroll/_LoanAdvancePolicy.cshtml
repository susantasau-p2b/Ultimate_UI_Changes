        <div class="row3 content_margine">
            @Html.LabelFor(m => m.EffectiveDate, "Effective Date:", new { @class = "popup-content-label must" })
            @Html.TextBoxFor(m => m.EffectiveDate, new { @class = "popup-content-textbox must date" })
        </div>
        <div class="row3 content_margine">
                    @Html.LabelFor(m => m.EndDate, "End Date:", new { @class = "popup-content-label must" })
