        <div class="row3 content_margine">
            @Html.LabelFor(m => m.MaxLoanAmount, "Max Loan Amt:", new { @class = "popup-content-label must" })
            @Html.TextBoxFor(m => m.MaxLoanAmount, new { @class = "popup-content-textbox must" })
