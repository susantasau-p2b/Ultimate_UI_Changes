            </div>
        </div>



        <div class="row3 content_margine">
            @Html.LabelFor(m => m.IntAppl, "Investment Appli:", new { @class = "popup-content-label" })
            <div class="popup_radio_button radio_button_div_2 ">
                @Html.RadioButtonFor(m => m.IntAppl, "true", new { type = "radio", @id = "radio9" })
                @Html.Label("Yes", new { @for = "radio9" })
                @Html.RadioButtonFor(m => m.IntAppl, "false", new { type = "radio", @id = "radio10" })
                @Html.Label("No", new { @for = "radio10" })
            </div>
        </div>
        <div class="row3 content_margine">
            @Html.LabelFor(m => m.InterestType, "Interest Type:", new { @class = "popup-content-label must" })
            <select id="InterestTpyelist" name="InterestTypelist" class="drop must" style="width:120px;"><option></option></select>
        </div>
        <div class="row3 content_margine">@Html.LabelFor(m => m.IntRate, "Investment Rate:", new { @class = "popup-content-label must" })@Html.TextBoxFor(m => m.IntRate, new { @class = "popup-content-textbox must", id = "IntRate" })</div>
        <div class="row3 content_margine horizontal_row3 content_margine">
            @Html.LabelFor(m => m.IsPerkOnInt, "Perk on Investment Appli:", new { @class = "popup-content-label" })
            <div class="popup_radio_button radio_button_div_3 ">
                @Html.RadioButtonFor(m => m.IsPerkOnInt, "true", new { type = "radio", @id = "radio11" })
                @Html.Label("Yes", new { @for = "radio11" })
                @Html.RadioButtonFor(m => m.IsPerkOnInt, "false", new { type = "radio", @id = "radio12" })
                @Html.Label("No", new { @for = "radio12" })
            </div>
        </div>
        <div class="row3 content_margine">
            @Html.LabelFor(m => m.GovtIntRate, "Gov Int Rate:", new { @class = "popup-content-label must" })
            @Html.TextBoxFor(m => m.GovtIntRate, new { @class = "popup-content-textbox must" })
        </div>
    }
