@{
    Layout = null;
}
@model Recruitment.CategoryPost
@*<link rel="stylesheet" type="text/css" href="~/Content/mb-ui.css" />*@
<style>

    .popup-content-label {
        display: block;
        float: left;
        width: 118px;
    }

    .popup-content-textbox {
        margin-bottom: 1px;
        min-width: 150px;
    }

    /*.row3 {
        width: 402px;
    }*/



    .popup-content-textbox-long {
        margin-bottom: 1px;
        width: 290px;
    }


    .row2 {
        width: 402px;
    }
</style>
<div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormCategoryP" }))
    {
        <input id="Autho_Action" type="hidden" name="Autho_Action" />
        <input id="Autho_Allow" type="hidden" name="Autho_Allow" />

        <div class="row3 content_margine">
            @Html.LabelFor(m => m.NoOfVacancies, "Vacancies  :", new { @class = "popup-content-label "})
            @Html.TextBoxFor(m => m.NoOfVacancies, new { @class = "popup-content-textbox ", id = "txtNoOfVacCategory" })
        </div>   
        
        
        <div class="row3 content_margine" >
           @Html.LabelFor(m => m.RelaxationAge, "Relaxation age :", new { @class = "popup-content-label must" })
            @Html.TextBoxFor(m => m.RelaxationAge, new { @class = "popup-content-textbox must", id = "txtNoOfAgeCategory" })
            </div>
      
           <div class="add_row content_margine  ">
            @Html.LabelFor(m => m.Category, "Category Type:", new { @class = "popup-content-label must" })
               <select id="CategoryPostListP_DDL" name="CategoryPostListP_DDL" class="drop must" style="width:180px;">
                   <option value="0">-Select-</option>
               </select>
          
        </div>
    }
</div>
<script>
    $(function () {
        $('#CategoryPostListP_DDL').selectmenu().selectmenu('menuWidget');
        $('#CategoryPostListP_DDL').P2BSelectMenuAppend("@Url.Action("GetLookupValue", "lookup")", 1, "");
        $('#txtNoOfAgeCategory').ForceOnlyNumeric().MaxLength(3);
        $('#txtNoOfVacCategory').ForceOnlyNumeric().MaxLength(3);
      //  $('#CountryList_DDL').P2BSelectMenuOnChange("selectmenuchange", /*Url.Action("PopulateDropDownList", "state")", '#StateList_DDL', ""); 
    });
    $(document).ready(function e() {
        $('.drop').css({ "width": "182px" });
        $('.drop').selectmenu().selectmenu('menuWidget').css({ "height": "200px" });
        //  $('#CategorySplTypeList').P2BSelectMenuAppend("/*Url.Action("PopulateDropDownList", "country")", "", "", '#CategorySplTypeList');
    });
</script>
