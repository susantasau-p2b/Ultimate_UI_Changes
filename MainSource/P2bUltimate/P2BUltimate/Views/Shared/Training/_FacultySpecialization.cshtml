
@{
    Layout = null;
}
@model Training.FacultySpecialization

<link href="~/Content/Unit/Unit.css" rel="stylesheet" />
<link href="~/Content/popup_form.css" rel="stylesheet" />

<style>
    .icon-row {
        position: relative;
        left: 60px;
        top: -150px;
    }
</style>

<script>
    $(document).ready(function (e) {
       // $('#SpecType').ValidateTextBox({ maxlength: 40, alphanum: true });
       // $('#SpecArea').ValidateTextBox({ alphanum: true });

        $('.popup_radio_button').controlgroup();
        $('#Autho').makeDisable('#Create,#Edit,#Delete');
        $('#Category').selectmenu().selectmenu("menuWidget");
        $('#Autho').onClickGrid('#JqGrid', '@Url.Action("P2BGrid")', '@Url.Action("P2BGrid")');
    });
</script>

<body>
    <div id="Create_Dialog" title="Create Faculty Specialization">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmFacultySpecialization" }))
        {
            <input id="Autho_Action" type="hidden" name="Autho_Action" />
            <input id="Autho_Allow" type="hidden" name="Autho_Allow" />
            <div class="row1 content_margine">@Html.LabelFor(m => m.SpecType, "Specialization Type :", new { @class = "popup-content-label must" })@Html.TextAreaFor(m => m.SpecType, new { @class = "popup-content-textbox must" })</div>
            <br />
            <div class="row1 content_margine">@Html.LabelFor(m => m.SpecArea, "Specialization Area :", new { @class = "popup-content-label must" })@Html.TextAreaFor(m => m.SpecArea, new { @class = "popup-content-textbox must" })</div>
        }
    </div>
</body>