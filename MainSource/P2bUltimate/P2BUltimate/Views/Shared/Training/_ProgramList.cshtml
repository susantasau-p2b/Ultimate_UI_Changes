        </div>
        <div class="row3 content_margine">
            @Html.LabelFor(m => m.SubjectDetails, "Subject Details :", new { @class = "popup-content-label1 must" })
            @Html.TextAreaFor(m => m.SubjectDetails, new { @class = "popup-content-textbox must"})
        </div>

