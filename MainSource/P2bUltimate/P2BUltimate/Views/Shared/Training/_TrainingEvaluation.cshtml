
@{
    Layout = null;
}

@model Training.TrainingEvaluation

<link href="~/Content/Unit/Unit.css" rel="stylesheet" />
<link href="~/Content/popup_form.css" rel="stylesheet" />

<style>
    .icon-row {
        position: relative;
        left: 60px;
        top: -150px;
    }

     .popup-content-labeln {
            width: 118px;
            display: block;
            float: left;
            margin: 1px;
        }
</style>


<script>
    $(document).ready(function (e) {    
        var  width, height;        
        Caption = 'Training Evaluation';
         width = 1000;
        height = 150;
        
        $('#WrittenScore').ForceOnlyNumeric().MaxLength(8);
        $('#InterviewScore').ForceOnlyNumeric().MaxLength(8);
        $('#GDScore').ForceOnlyNumeric().MaxLength(8);
    });
</script>

<body>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormTraingEvaluEdit", name = "FormTraingEvaluEdit" }))
    {
        <input id="Autho_Action" type="hidden" name="Autho_Action" />
        <input id="Autho_Allow" type="hidden" name="Autho_Allow" />
        <div class="row1 content_margine">@Html.LabelFor(m => m.WrittenScore, " Written Score :", new { @class = "popup-content-labeln must" })@Html.TextBoxFor(m => m.WrittenScore, new { @class = "popup-content-textbox must" })</div>
        <div class="row1 content_margine">@Html.LabelFor(m => m.InterviewScore, "Interview Score :", new { @class = "popup-content-labeln must" })@Html.TextBoxFor(m => m.InterviewScore, new { @class = "popup-content-textbox must" })</div>
        <div class="row1 content_margine">@Html.LabelFor(m => m.GDScore, "GD Score :", new { @class = "popup-content-labeln must" }) @Html.TextBoxFor(m => m.GDScore, new { @class = "popup-content-textbox must" })</div>
        <div class="row1 content_margine">@Html.LabelFor(m => m.EvaluationDetails, "Details(Remark) :", new { @class = "popup-content-labeln " })@Html.TextAreaFor(m => m.EvaluationDetails, new { @class = "popup-content-textbox " })</div>
    }
</body>